{% extends "::base.html.twig" %}


{% block main_content %}
{% if error %}
    <div>
        {% if error.message == "Bad credentials" %}
            {{"Veuillez vérifier vos identifiants !"}}
        {% endif %}
    </div>
{% endif %}


<form action="{{ path('login_check') }}" method="post" class="form-horizontal">

    <fieldset>
    <legend>Connectez-vous !</legend>
    </fieldset>
    <div class="col-md-6" id="formlog">
    <div class="form-group">
        <div class="col-md-12 ">
            <label for="username" class="control-label">Pseudo :</label>

                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Votre pseudo"class="form-control" />

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-12">
                <label for="password" class="control-label">Mot de passe :</label>
                 <input type="password" id="password" name="_password" placeholder="Votre mot de passe" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5 col-md-offset-8">
            <h6>
                <a href="{{ path('bdloc_app_security_forgotpassword') }}" title="nouveau mot de passe" >
                Mot de passe de passe oublié ?</a>
            </h6>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-default-red">Connexion</button><br>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <input type="checkbox" id="remember_me" name="_remember_me" checked />
            <label for="remember_me">Rester connecté</label>
        </div>
    </div>


</div>
 <div class="col-md-6 ">
     <div class="col-md-6 col-md-offset-2">
        <img alt="Sandman" src="{{ asset('img/bd-perso/sandman.jpg') }}"></a>
     </div>
 </div>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        #}
        <input type="hidden" name="_target_path" value="{{ url('bdloc_app_book_allbooks') }}" />



</form>

{% endblock %}
